<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Diazzo"
             x:Class="Diazzo.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type local:Components.Routes}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>

    <StackLayout Orientation="Horizontal" Spacing="5" Padding="5" VerticalOptions="End" HorizontalOptions="FillAndExpand">
        <Button HorizontalOptions="FillAndExpand" CornerRadius="25" Text="Round Page"/>
        <Button HorizontalOptions="FillAndExpand" CornerRadius="25" Text="User Page"/>
    </StackLayout>
</ContentPage>
